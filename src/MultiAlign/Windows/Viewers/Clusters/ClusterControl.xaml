<UserControl x:Class="MultiAlign.Windows.Viewers.Clusters.ClusterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"             
             xmlns:pnnlCharts="clr-namespace:PNNLControls.Drawing.Charting;assembly=PNNLControls"
             xmlns:maCharts="clr-namespace:MultiAlignCustomControls.Charting;assembly=MultiAlignCustomControls"                                               
             xmlns:featureViews="clr-namespace:MultiAlign.Windows.Viewers.Features"          
             xmlns:clusterViews="clr-namespace:MultiAlign.Windows.Viewers.Clusters"         
             xmlns:spectraViews="clr-namespace:MultiAlign.Windows.Viewers.Spectra"          
             xmlns:massTagViews="clr-namespace:MultiAlign.Windows.Viewers.MassTags"       
             xmlns:converters="clr-namespace:MultiAlign.Converters"
             mc:Ignorable="d"          
             x:Name="myControl" 
             d:DesignWidth="968"
             d:DesignHeight="582">

    <UserControl.Resources>
        <converters:BoolVisibilityConverter x:Key="UseDriftTimeConverter" FalseVisibility="Collapsed"></converters:BoolVisibilityConverter>
        <converters:BoolWidthConverter x:Key="UseDriftTimeWidthConverter" ></converters:BoolWidthConverter>
    </UserControl.Resources>

    <DockPanel>
     <Label 
         DockPanel.Dock="Top"
         HorizontalContentAlignment="Center"
         VerticalContentAlignment="Center"
         FontSize="14"
         Content="{Binding Path=Name}"/>
    <Grid 
        Margin="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="80*"/>
        </Grid.ColumnDefinitions>        
        <Grid
            Grid.Column="0"
            Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>             
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="60*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="40*"/>
            </Grid.RowDefinitions>

            <TabControl
                Grid.Row="1"
                Grid.Column="0">
                <TabItem 
                    Style="{DynamicResource ResourceKey=SimpleTabItem}"
                    FontSize="14"
                    Width="128"
                    Header="Cluster Mass vs. NET"
                    >                    
                    <WindowsFormsHost
                        Margin="1,1,1,1"
                        Grid.Row="0"
                        Grid.Column="0">
                        <maCharts:SingleClusterChart
                                x:Name="m_clusterChart"
                                Title=""
                                XAxisLabel="NET"
                                LegendVisible="False"
                                YAxisShortHand="ppm"
                                XAxisShortHand="NET"
                                />
                    </WindowsFormsHost>
                </TabItem>
                <TabItem 
                    Style="{DynamicResource ResourceKey=SimpleTabItem}"
                    FontSize="16"
                    Width="196"
                    Visibility="{Binding Path=UsesDriftTime , Converter={StaticResource ResourceKey=UseDriftTimeConverter}}"
                    Header="Cluster Mass vs. Drift Time"
                    >

                    <WindowsFormsHost
                        Margin="1,1,1,1"
                        Grid.Row="0"                        
                        Grid.Column="2">
                        <maCharts:SingleClusterChart
                                x:Name="m_driftChart"                                
                                Title=""                                
                                IsDriftTimeXAxis="True"
                                XAxisLabel="Drift Time (ms)"
                                YAxisShortHand="ppm"
                                XAxisShortHand="ms"
                                LegendVisible="False"
                                />
                    </WindowsFormsHost>
                </TabItem>
            </TabControl>
            <GridSplitter
                        Grid.Row="2"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Height="3"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Margin="1"
                        Background="#FFA0A0A0"/>
           
            <WindowsFormsHost   
                Grid.Column="0"                
                Grid.Row="4">
                <maCharts:SingleUMCChart
                                    x:Name="m_msFeaturePlot"
                                    Title=""  
                                    YAxisShortHand="ppm"
                                    XAxisShortHand="scans"
                                    LegendVisible="False"                
                                    />
            </WindowsFormsHost>
            <Grid 
                Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="20*"/>
                </Grid.ColumnDefinitions>
                <Label 
                        FontSize="12"
                        Margin="5"
                        Foreground ="Gray"  
                        VerticalContentAlignment="Center"                      
                        Grid.Row="0"
                        Grid.Column="0">Features</Label>
                <ComboBox
                            FontSize="12"
                            HorizontalContentAlignment="Center"
                            SelectedItem="{Binding UMCFeature, 
                            RelativeSource={RelativeSource AncestorType={x:Type UserControl}},
                            UpdateSourceTrigger=PropertyChanged,
                            Mode=TwoWay,
                            NotifyOnSourceUpdated=True}"
                            ItemsSource="{Binding Features, 
                            RelativeSource={RelativeSource AncestorType={x:Type UserControl}},
                            UpdateSourceTrigger=PropertyChanged,
                            NotifyOnSourceUpdated=True}"                        
                            Margin="5"
                            Grid.Column="1"/>
            </Grid>
        </Grid>
        <GridSplitter                        
                        Grid.Column="1"
                        Width="3"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="#FF00000A"/> 
        <Grid
            Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border
                Grid.Row="0"
                BorderBrush="LightGray"
                BorderThickness="1"
                Margin="5">                    
                                   
            </Border>
                <Grid 
                    Grid.Row="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20*"/>
                    </Grid.ColumnDefinitions>
                    <Label 
                        FontSize="12"
                        Margin="5"
                        Foreground ="Gray"  
                        VerticalContentAlignment="Center"                      
                        Grid.Row="0"
                        Grid.Column="0">Charge</Label>
                    <ComboBox
                            FontSize="12"
                            HorizontalContentAlignment="Center"
                            SelectedItem="{Binding SelectedCharge, 
                            RelativeSource={RelativeSource AncestorType={x:Type UserControl}},
                            UpdateSourceTrigger=PropertyChanged,
                            Mode=TwoWay,
                            NotifyOnSourceUpdated=True}"
                            ItemsSource="{Binding Charges, 
                            RelativeSource={RelativeSource AncestorType={x:Type UserControl}},
                            UpdateSourceTrigger=PropertyChanged,
                            NotifyOnSourceUpdated=True}"                        
                            Margin="5"
                            Grid.Column="1"/>
                </Grid>
                
                <GridSplitter
                        Grid.Row="3"            
                        Height="3"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Margin="1"
                        Background="#FFA0A0A0"/>
                <Label 
                    Margin="5"
                    Foreground ="Gray"  
                    Content="Extracted Ion Chromatrogram"
                    FontSize="10"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"                      
                    Grid.Row="0"/>
                <WindowsFormsHost                                
                        Grid.Row="2">
                    <maCharts:SICChart
                                        x:Name="m_sicChart"
                                        Title="XIC"                        
                                        TitleVisible="False"
                                        LegendVisible="False"                
                                        />
                </WindowsFormsHost>                       
                <Label 
                    Margin="5"
                    Foreground ="Gray"  
                    Content="Parent Spectra"
                    FontSize="10"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"                      
                    Grid.Row="4"/>
                <WindowsFormsHost                        
                    Grid.Row="6" >
                    <maCharts:MsFeatureChart
                            x:Name="m_parentSpectra"
                            TitleVisible="False"
                            Title="MS"
                            XAxisLabel="m/z"
                            YAxisLabel="Intensity"/>
                </WindowsFormsHost>
                <GridSplitter
                        Grid.Row="3"            
                        Height="3"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Margin="1"
                        Background="#FFA0A0A0"/>
            
        </Grid>        
    </Grid>
    </DockPanel>
</UserControl>
