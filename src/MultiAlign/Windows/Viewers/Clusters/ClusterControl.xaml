<UserControl x:Class="MultiAlign.Windows.Viewers.Clusters.ClusterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"             
             xmlns:pnnlCharts="clr-namespace:PNNLControls.Drawing.Charting;assembly=PNNLControls"
             xmlns:maCharts="clr-namespace:MultiAlignCustomControls.Charting;assembly=MultiAlignCustomControls"                                               
             xmlns:featureViews="clr-namespace:MultiAlign.Windows.Viewers.Features"          
             xmlns:clusterViews="clr-namespace:MultiAlign.Windows.Viewers.Clusters"         
             xmlns:spectraViews="clr-namespace:MultiAlign.Windows.Viewers.Spectra"          
             xmlns:massTagViews="clr-namespace:MultiAlign.Windows.Viewers.MassTags"       
             xmlns:converters="clr-namespace:MultiAlign.Converters"
             mc:Ignorable="d"          
             x:Name="myControl" 
             d:DesignWidth="800"
             d:DesignHeight="600">

    <UserControl.Resources>
        <converters:BoolVisibilityConverter x:Key="UseDriftTimeConverter" FalseVisibility="Collapsed"></converters:BoolVisibilityConverter>
        <converters:BoolWidthConverter x:Key="UseDriftTimeWidthConverter" ></converters:BoolWidthConverter>
    </UserControl.Resources>

    <Grid 
        Margin="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid
            Grid.Column="2"
            Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>                
                <ColumnDefinition Width="{Binding Path=UsesDriftTime, Converter={StaticResource ResourceKey=UseDriftTimeWidthConverter}}"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="50*"/>
            </Grid.RowDefinitions>
            <TabControl
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Grid.Row="0">
                <TabItem 
                    Style="{DynamicResource ResourceKey=SimpleTabItem}"
                    FontSize="12"
                    Header="Mass vs. Net"
                    >                    
                    <WindowsFormsHost
                        Margin="1,1,1,1"
                        Grid.Row="0"
                        Grid.Column="0">
                <maCharts:SingleClusterChart
                                x:Name="m_clusterChart"
                                Title=""
                                XAxisLabel="NET"
                                LegendVisible="False"
                                YAxisShortHand="ppm"
                                XAxisShortHand="NET"
                                />
            </WindowsFormsHost>
                </TabItem>
                <TabItem 
                    Style="{DynamicResource ResourceKey=SimpleTabItem}"
                    FontSize="12"
                    Visibility="{Binding Path=UsesDriftTime , Converter={StaticResource ResourceKey=UseDriftTimeConverter}}"
                    Header="Mass vs. Drift Time"
                    >
                    <WindowsFormsHost
                        Margin="1,1,1,1"
                        Grid.Row="0"                        
                        Grid.Column="2">
                        <maCharts:SingleClusterChart
                                x:Name="m_driftChart"                                
                                Title=""                                
                                IsDriftTimeXAxis="True"
                                XAxisLabel="Drift Time (ms)"
                            YAxisShortHand="ppm"
                            XAxisShortHand="ms"
                                LegendVisible="False"
                                />
                    </WindowsFormsHost>
                </TabItem>
            </TabControl>
            <GridSplitter
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Height="3"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Margin="1"
                        Background="#FFA0A0A0"/>
            <TabControl
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Grid.Row="2">
                <!--<TabItem 
                Style="{DynamicResource ResourceKey=SimpleTabItem}"
                Header="Abundance Profile"
                >
                <WindowsFormsHost>
                    <maCharts:AbundanceProfileChart
                                        x:Name="m_profileChart"
                                        Title=""
                                        LegendVisible="False"                
                                        />
                </WindowsFormsHost>
            </TabItem>-->
                <TabItem 
                    Style="{DynamicResource ResourceKey=SimpleTabItem}"
                    Header="MS Spectra"
                    >
                    <WindowsFormsHost
                        Grid.Row="4"   
                        Grid.Column="0">
                        <maCharts:SpectraChart
                            x:Name="m_parentSpectra"
                            TitleVisible="True"
                            Title="MS"
                            XAxisLabel="m/z"
                            YAxisLabel="Intensity"/>
                    </WindowsFormsHost>

                </TabItem>

                <TabItem 
                    Style="{DynamicResource ResourceKey=SimpleTabItem}"
                    Header="MS/MS"
                    >
                    <WindowsFormsHost
                        Grid.Row="4"   
                        Grid.Column="0">
                        <maCharts:SpectraChart
                                x:Name="m_spectraChart"
                                TitleVisible="True"
                                Title="MS/MS"
                                XAxisLabel="m/z"
                                YAxisLabel="Intensity"/>
                    </WindowsFormsHost>

                </TabItem>
            </TabControl>
        </Grid>
        <GridSplitter
                        Grid.Row="0"
                        Grid.Column="1"
                        Grid.RowSpan="3"
                        Height="3"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="#FF00000A"/>
       
        <WrapPanel
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="3,3,3,3"
                        Grid.ColumnSpan="3"></WrapPanel>

        <Grid
            Grid.Row="0"
            Grid.Column="0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="25*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="25*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid
                Grid.Column="0"
                Grid.Row="0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border
                    Grid.Row="0"
                    BorderBrush="LightGray"
                    BorderThickness="1"
                    Margin="5">
                    <Label HorizontalContentAlignment="Center" FontSize="16" Foreground="Gray">Mass Vs. Scan</Label>
                </Border>
                <WindowsFormsHost                    
                    Grid.Row="1"
                    >
                    <maCharts:SingleUMCChart
                                    x:Name="m_msFeaturePlot"
                                    Title=""                                    
                                    LegendVisible="False"                
                                    />
                </WindowsFormsHost>
            </Grid>
            <GridSplitter
                        Grid.Row="1"
                        Grid.Column="0"                
                        Height="3"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Margin="1"
                        Background="#FFA0A0A0"/>
            <!-- Plots based on feature selection -->
            <Grid
                Grid.Column="0"
                Grid.Row="2">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border
                    BorderBrush="LightGray"
                    BorderThickness="1"
                    Margin="5">
                    <Label HorizontalContentAlignment="Center" FontSize="16" Foreground="Gray">XIC</Label>
                </Border>
                <WindowsFormsHost
                                Grid.Column="2"
                                Grid.Row="2">
                    <maCharts:SICChart
                                        x:Name="m_sicChart"
                                        Title="XIC"                        
                                        TitleVisible="False"
                                        LegendVisible="False"                
                                        />
                </WindowsFormsHost>
            </Grid>
        </Grid>
    </Grid>
    
</UserControl>
