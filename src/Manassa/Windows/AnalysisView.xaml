<UserControl x:Class="Manassa.Windows.AllClustersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"              
             xmlns:windows="clr-namespace:Manassa.Windows"
             xmlns:maCharts="clr-namespace:MultiAlignCustomControls.Charting;assembly=MultiAlignCustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="435" d:DesignWidth="502">    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <!-- Selection Window -->
        <StackPanel 
            Margin="4,4,4,4"
            Grid.Column="1">            
            <ToggleButton 
                x:Name="m_attributedFilter"                
                IsChecked="False"
                Margin="2,2,2,2"            
                Grid.Row="1"
                Grid.Column="5"
                Background="GhostWhite"                
                HorizontalAlignment="Stretch">
                <ToggleButton.Style>
                    <Style TargetType="{x:Type ToggleButton}">
                        <Setter Property="Content" Value="attributed"/>
                    </Style>
                </ToggleButton.Style>
            </ToggleButton>
            <ToggleButton 
                x:Name="m_unattributedFilter"                
                IsChecked="False"
                Margin="2,2,2,2"            
                Grid.Row="1"
                Grid.Column="5"
                Background="GhostWhite"                
                HorizontalAlignment="Stretch">
                <ToggleButton.Style>
                    <Style TargetType="{x:Type ToggleButton}">
                        <Setter Property="Content" Value="Unattributed"/>
                    </Style>
                </ToggleButton.Style>
            </ToggleButton>
            <ToggleButton 
                x:Name="m_unAmbiguousFilter"                
                IsChecked="False"
                Margin="2,2,2,2"            
                Grid.Row="1"
                Grid.Column="5"
                Background="GhostWhite"                
                HorizontalAlignment="Stretch">
                <ToggleButton.Style>
                    <Style TargetType="{x:Type ToggleButton}">
                        <Setter Property="Content" Value="Unambiguous"/>
                    </Style>
                </ToggleButton.Style>
            </ToggleButton>
            <ToggleButton 
                x:Name="m_MsMsFilter"                
                IsChecked="False"
                Margin="2,2,2,2"            
                Grid.Row="1"
                Grid.Column="5"
                Background="GhostWhite"                
                HorizontalAlignment="Stretch">
                <ToggleButton.Style>
                    <Style TargetType="{x:Type ToggleButton}">
                        <Setter Property="Content" Value="MS/MS"/>                        
                    </Style>
                </ToggleButton.Style>
            </ToggleButton>
        </StackPanel>
        <Grid
            Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="55*"/>
                <RowDefinition Height="45*"/>
            </Grid.RowDefinitions>

            <Image Grid.Column="0" Grid.Row="0"/>
            <Image Grid.Column="0" Grid.Row="1"/>


            <!-- Cluster Grid Plots -->
            <WindowsFormsHost Grid.Row="0"
                              Grid.Column="0">
                <maCharts:ctlClusterChart
                    Title=""
                    LegendVisible="false"
                    x:Name="m_clusterPlot"
                    />                    
            </WindowsFormsHost>
            
            <!-- Cluster Grid Data -->
            <windows:ClusterGrid
                Grid.Column="1"
                Grid.Row="0"
                x:Name="m_clusterGrid"                
                />

            <!-- Single cluster -->
            <windows:ClusterControl
                x:Name="m_clusterControl"
                Grid.Row="1"
                Grid.RowSpan="2"
                Grid.Column="0"
                Grid.ColumnSpan="2"                
                Cluster="{Binding Mode=OneWay, ElementName=m_clusterGrid, Path=SelectedCluster}"
                />
        </Grid>
    </Grid>
</UserControl>
