<UserControl x:Class="Manassa.Windows.AnalysisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"              
             xmlns:windows="clr-namespace:Manassa.Windows"
             xmlns:maCharts="clr-namespace:MultiAlignCustomControls.Charting;assembly=MultiAlignCustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="616" d:DesignWidth="872">    
    
    <Grid>
        <TabControl>
            <TabItem
                Header="Clusters">
                <Grid>        
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="55*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="45*"/>
                    </Grid.RowDefinitions>
     
                    <GridSplitter
                        Grid.Row="0"
                        Grid.Column="1"
                        Width="3"
                        
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch" 
                        Background="#FF00000A" />
                    <GridSplitter
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Height="3"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="#FF00000A"/>
                    
                    <!-- Cluster Grid Plots -->
                    <WindowsFormsHost                
                        Margin="5,5,5,5"
                        Grid.Row="0"
                        Grid.Column="0">                        
                        <maCharts:ctlClusterChart
                            Title=""
                            LegendVisible="false"
                            YAxisShortHand="ppm"
                            XAxisShortHand="NET"
                            x:Name="m_clusterPlot"
                            />
                    </WindowsFormsHost> 
                    
                    <!-- Cluster Grid Data -->
                    <windows:ClusterGrid
                        Margin="5,5,5,5"
                        Grid.Column="2"
                        Grid.Row="0"
                        x:Name="m_clusterGrid"                
                        />

                    <!-- Single cluster Control-->
                    <windows:ClusterControl
                        Margin="5,5,5,5"
                        x:Name="m_clusterControl"
                        Grid.Row="2"                    
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Cluster="{Binding Mode=OneWay, ElementName=m_clusterGrid, Path=SelectedCluster}"/>
                </Grid>
            </TabItem>
            <TabItem
                Header="Mass Tags / Proteins / Peptides"
                >
                <windows:MassTagViewer
                    x:Name="m_massTagViewer"
                    />
            </TabItem>
            <TabItem
                Header="Datasets"                
                >                                            
                <windows:DatasetGrid
                    x:Name="m_datasetsName"/>                
            </TabItem>
            <TabItem
                Header="MS/MS"
                >
                <windows:MsMsViewer
                    x:Name="m_msmsViewer">

                </windows:MsMsViewer>
            </TabItem>
            <TabItem
                Header="Statistics Plots"
                >

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    
                    <WindowsFormsHost                 
                        Margin="5,5,5,5"
                        Grid.Row="0"
                        Grid.Column="0">
                        <maCharts:ChargeStateHistogram
                            Title="Charge States"
                            XAxisLabel="Charge State"
                            YAxisLabel="Count"
                            YAxisGridLines="True"
                            XAxisGridLines="True"
                            LegendVisible="False"
                            x:Name="m_chargeStates"
                            TitleVisible="True" />
                    </WindowsFormsHost>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
