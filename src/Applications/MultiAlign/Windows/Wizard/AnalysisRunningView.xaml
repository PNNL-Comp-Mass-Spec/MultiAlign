<UserControl x:Class="MultiAlign.Windows.Wizard.AnalysisRunningView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             mc:Ignorable="d" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             d:DesignHeight="574" 
             d:DesignWidth="1200">
    <UserControl.Resources>
        <DataTemplate x:Key="MessageTemplate">
            <Border
                Margin="2"
                BorderThickness="1"
                BorderBrush="LightGray"
                >
                <StackPanel>
                    <TextBlock Text="{Binding Time}"
                               FontWeight="Bold"
                               FontSize="14"
                               Margin="2"
                               Foreground="Gray"/>
                    <TextBlock TextWrapping="WrapWithOverflow"                   
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               FontSize="12"
                               Margin="2"
                               FontWeight="ExtraBlack"
                               Foreground="Black"
                               Text="{Binding Path=Message}" />
                </StackPanel>
            </Border>            
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="82"/>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="38"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="40*"/>
        </Grid.ColumnDefinitions>
        
        <ItemsControl Grid.Row="0"
                      Margin="10"
                      ItemsSource="{Binding AnalysisNodes}"
                      >
            <ItemsControl.Template>
                <ControlTemplate>
                    <WrapPanel  
                                Width="{TemplateBinding Width}" 
                                Height="{TemplateBinding Height}" 
                                FlowDirection="LeftToRight"
                                IsItemsHost="true" />
                </ControlTemplate>
            </ItemsControl.Template>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    
                        <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding Name}"
                               FontWeight="Bold"
                               FontSize="18"
                               Margin="2"
                               ToolTip="{Binding Description}">
                            <TextBlock.Style >
                                <Style TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsCurrent}" Value="True">
                                            <Setter Property="Foreground" Value="Crimson"/>
                                            <Setter Property="FontWeight" Value="ExtraBold"/>
                                        </DataTrigger>
                                            <DataTrigger Binding="{Binding IsCurrent}" Value="False">
                                            <Setter Property="Foreground" Value="LightGray"/>
                                            <Setter Property="FontWeight" Value="Normal"/>
                                        </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                        </TextBlock>
                                       
                            <Image            
                                    Height="32"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Source="/MultiAlign;component/Resources/test-tube-64.png">
                                <Image.Style >
                                    <Style TargetType="{x:Type Image}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsCurrent}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>                                                
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsCurrent}" Value="False">
                                                <Setter Property="Visibility" Value="Hidden"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>
                        </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Border
            BorderBrush="LightGray"
            BorderThickness="5"
            Padding="2"
            Margin="5"
            Grid.Row="1"
            Grid.Column="0">
            <ScrollViewer>
                <ListBox  
                    ItemsSource="{Binding Path=GalleryImages}"/>
            </ScrollViewer>
        </Border>

        <Border
                BorderBrush="LightGray"
                BorderThickness="5"
                Padding="2"
                Margin="5"
                Grid.Column="2"
                Grid.RowSpan="2"
                Grid.Row="0">
            <ScrollViewer                    
                    Margin="5">
                <ListBox 
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Center"
                        ItemTemplate="{StaticResource MessageTemplate}"
                        HorizontalAlignment="Stretch"
                        ItemsSource="{Binding Messages, UpdateSourceTrigger=PropertyChanged, NotifyOnSourceUpdated=True}"/>
            </ScrollViewer>
        </Border>
        <GridSplitter
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Width="3"
                Grid.Column="1"
                Grid.Row="0"
                Grid.RowSpan="2"
                Background="Gray"
                />
        <Button            
                Style="{DynamicResource ResourceKey=SimpleButtonStyle}"                            
                Grid.Row="2"
                Grid.Column="2"
                Width="128"
                HorizontalAlignment="Right"
                Margin="5,5,5,5"
                Command="{Binding CancelAnalysis}"
                Content="Cancel"  />
    </Grid>
</UserControl>
